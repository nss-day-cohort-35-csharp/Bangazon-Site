@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <h3 class="ui center aligned icon header">
        <i class="user icon circular inverted teal"></i>
        <a class="item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="ui secondary button">Logout</button>
            </form>
    </h3>
}
else
{
    <a class="item text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="item text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>

}
